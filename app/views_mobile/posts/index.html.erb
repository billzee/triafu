<div id="mobile-comments" class="sidenav top">
  <%= react_component("CommentSection", props: { isMobile: true }, html_options: {class: "pr-3 pl-3"}) %>
</div>

<%= render "layouts/sub_header" %>

<div class="row no-gutters" id="main">
  <%= render "partials/devise_communications" %>
  <%= render "partials/user_profile" %>
  <div class="col-12 pb-4">
    <%= react_component("PostSection",
    props:{
      category: params[:category],
      username: params[:username],
      isMobile: true
    },
    prerender: true) %>
  </div>
</div>

<div id="share-links" class="sidenav bottom bgm-white">
  <%= react_component("PostShareLinks", props: { isMobile: true }, prerender: true) %>
</div>
