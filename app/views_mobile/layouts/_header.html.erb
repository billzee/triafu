<div class="row header-mobile no-gutters">
  <%= link_to root_path, class: "logo" do %>
    <%= image_tag "brand/triafu-triangle.svg", height: 30%>
  <% end %>

  <div class="col pt-1 text-right">
    <% if !user_signed_in? %>
      <button class="btn btn-primary" data-toggle="modal"
      data-target="#m_signup">
        Criar Conta
      </button>

      <div class="list-inline-item header-item">
        <a href class="header-link"
        data-toggle="modal" data-target="#m_login">
          Entrar
        </a>
      </div>
    <% else %>
      <button class="btn btn-success mr-1"
      data-toggle="modal" data-target="#m_new_post">
        <i class="fa fa-plus"></i> Publicar
      </button>
    <% end %>
  </div>

  <% if user_signed_in? %>
    <div class="profile-actions header-item">
      <a href class="dropdown-toggle header-link pr-0" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <%= image_tag(current_user.image, class: "rounded-circle", height: 35, width: 35) %>
      </a>
      <div class="dropdown-menu dropdown-menu-left z-index">
        <div class="dropdown-header text-center"><%= current_user.username %></div>
        <div class="dropdown-divider"></div>
        <%= link_to('Editar perfil', edit_user_registration_path, class: "dropdown-item") %>
        <%= link_to('Sair', destroy_user_session_path, :method => :delete, class: "dropdown-item") %>
      </div>
    </div>
  <% end %>
</div>
