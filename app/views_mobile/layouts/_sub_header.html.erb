<div class="row sub-header-mobile no-gutters">
  <div class="col-6">
    <div class="row no-gutters">
      <%= link_to('Top', top_posts_path, class: "col-6 header-link" +
      if current_page?(top_posts_path) || current_page?(root_path) then " active" else "" end) %>
      <%= link_to('Novas', newcomer_posts_path, class: "header-link col-6 header-link" +
      if current_page? newcomer_posts_path then " active" else "" end) %>
    </div>
  </div>

  <div class="col-6 float-right p-2">
    <% if !user_signed_in? %>
      <button class="btn btn-sm btn-block btn-success" id="publish-button"
      data-toggle="modal" data-target="#m_login">
        + Publicar
      </button>
    <% else %>
      <%= react_component("PublishButton", props: { isMobile: true }) %>
    <% end %>
  </div>
</div>
