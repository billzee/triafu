<% if !@user.nil? %>
  <div class="col-12 p-2 bgm-dark">

    <% if mobile_device? %>
      <div class="row text-white no-gutters">
        <div class="col-sm-10 offset-sm-2 col-xs-12">
          <div class="row no-gutters">
            <div class="col-4 text-right">
              <%= image_tag(@user.image, class: "rounded-circle", height: 60) %>
            </div>
            <div class="col-8 pl-3">
              <% if user_signed_in? && @user.id == current_user.id %>
                <small>essas são as suas publicações,</small>
              <% else %>
                <small>você está vendo pubs do(a)</small>
              <% end %>
              <br>
              <h1 class="mb-0"><%= @user.username %></h1>
              <%= @user.full_name %>
            </div>
          </div>
        </div>
      </div>
    <% else %>
      <div class="row no-gutters text-white justify-content-end">
        <div class="col-550 mr-5">
          <div class="row no-gutters">
            <div class="col-4 text-right">
              <%= image_tag(@user.image, class: "rounded-circle", height: 60) %>
            </div>
            <div class="col-8 pl-3">
              <% if user_signed_in? && @user.id == current_user.id %>
                <small>essas são as suas publicações,</small>
              <% else %>
                <small>você está vendo pubs do(a)</small>
              <% end %>
              <br>
              <h1 class="mb-0"><%= @user.username %></h1>
              <%= @user.full_name %>
            </div>
          </div>
        </div>
      </div>
    <% end %>

  </div>
<% end %>
