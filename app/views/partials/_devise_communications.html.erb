<% if alert || notice %>
  <div class="col text-center communications">
    <% if alert %>
      <div class="alert alert-danger mb-0 p-1">
        <%= alert %>
      </div>
    <% end %>
    <% if notice %>
      <div class="alert alert-success mb-0 p-1">
        <%= notice %>
      </div>
    <% end %>
  </div>
<% end %>
