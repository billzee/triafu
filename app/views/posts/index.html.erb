<div class="row posts-container">
  <div class="col p-0 posts" id="posts">
    <div class="row no-gutters">
      <%= render "partials/alert" %>
      <%= render "partials/user_profile" %>

      <div class="col text-right pt-4">
        <h1>Em alta <i class="fa fa-fire text-danger"></i></h1>
        <% Post.last(6).each do |post| %>
        
          <%= link_to post_path(reference_id: post.reference_id), target: "_blank" do %>
            <%= image_tag(post.image, class: "", height: 100, width: 300) %>
            <h2><%= post.title %></h2> <br>
          <% end %>

        <% end %>
      </div>

      <div class="w-700">
        <%= react_component("PostSection",
        props: {
          category: params[:category],
          username: params[:username]
        },
        prerender: true) %>
      </div>
    </div>
  </div>

  <%= react_component("CommentSection", html_options: {class: "col-xl-3 col-lg-4 mw-450 bgm-gray"}) %>
</div>
