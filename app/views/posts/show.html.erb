<div class="col posts">
  <% if alert || notice %>
    <div class="row">
      <div class="col-12 text-center communications">
        <% if alert %>
        <div class="alert alert-danger mb-0 p-1">
          <%= alert %>
        </div>
        <% end %>

        <% if notice %>
        <div class="alert alert-success mb-0 p-1">
          <%= notice %>
        </div>
        <% end %>
      </div>
    </div>
  <% end %>
  <%= react_component("PostSection", props: { postId: @post.id }, prerender: true) %>
</div>
<%= react_component("CommentSection", props: { postId: @post.id, userId: @post.user_id }, html_options: {class: "col-xl-3 col-lg-4 bgm-gray"}) %>
