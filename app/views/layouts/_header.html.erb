<div class="row header bg-inverse no-gutters fixed-top">
  <%= link_to root_path, class: "logo" do %>
    <%= image_tag "triafu-logo.svg", height: 32%>
  <% end %>

  <div class="col categories pt-2">
    <ul class="list-inline list-unstyled mb-0 mt-15">
      <li class="list-inline-item header-item active">
        <%= link_to('Top', top_posts_path, class: "header-link" +
        if current_page?(top_posts_path) || current_page?(root_path) then " active" else "" end) %>
      </li>
      <li class="list-inline-item header-item">
        <%= link_to('Novas', newcomer_posts_path, class: "header-link" +
        if current_page? newcomer_posts_path then " active" else "" end) %>
      </li>
    </ul>
  </div>

  <div class="col pt-2 float-right">
    <%= react_component("PostSort", prerender: true) %>
  </div>

  <div class="col pt-2 text-right">
    <% if !user_signed_in? %>
      <button class="btn btn-success mr-2" data-toggle="modal" data-target="#m_login">
        <i class="fa fa-plus"></i> Publicar
      </button>

      <button class="btn btn-primary" data-toggle="modal" data-target="#m_signup">
        Criar Conta
      </button>

      <div class="list-inline-item header-item mt-1">
        <a href="#" class="header-link" data-toggle="modal" data-target="#m_login">
          Entrar
        </a>
      </div>
    <% else %>
      <button class="btn btn-success mr-2" data-toggle="modal" data-target="#m_new_post">
        <i class="fa fa-plus"></i> Publicar
      </button>
    <% end %>

  </div>

  <% if user_signed_in? %>
    <div class="profile-actions header-item">
      <a href="#" class="dropdown-toggle header-link" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <%= image_tag(current_user.image, class: "rounded-circle", height: 38, width: 38) %>
      </a>
      <div class="dropdown-menu dropdown-menu-left mr-2">
        <div class="dropdown-header text-center"><%= current_user.username %></div>
        <div class="dropdown-divider"></div>
        <%= link_to('Editar perfil', edit_user_registration_path, class: "dropdown-item") %>
        <%= link_to('Sair', destroy_user_session_path, :method => :delete, class: "dropdown-item") %>
      </div>
    </div>
  <% end %>

  <!-- <%= react_component("CurrentUser", prerender: true) %> -->
</div>
