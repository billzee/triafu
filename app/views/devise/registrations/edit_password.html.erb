<%= render "section_select" %>

<div class="col-8">
  <h1>Editar Perfil</h1>

  <hr>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <div class="form-group">
      <label class="form-control-label">Senha Atual</label>
      <%= f.password_field :current_password, class: "form-control", autocomplete: "off" %>
    </div>

    <div class="form-group">
      <label class="form-control-label">Nova Senha</label>
      <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "off" %>
    </div>

    <%= f.submit "Salvar", class: "btn btn-success float-right" %>
  <% end %>
</div>
