<div class="col-md-6 col-sm">

  <h1>Criar conta</h1>

  <hr>

  <%= react_component("SocialLogin", prerender: true) %>

  <p class="text-muted text-center pt-3">
    Usando um endereço de e-mail
  </p>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="form-group">
      <label class="form-control-label">Nome Completo</label>
      <%= f.text_field :full_name, class: "form-control", autofocus: true %>
    </div>

    <div class="form-group">
      <label class="form-control-label">e-mail</label>
      <%= f.email_field :email, class: "form-control"%>
    </div>

    <div class="form-group">
      <label class="form-control-label">Senha</label>
      <%= f.password_field :password, class: "form-control", autocomplete: "off" %>
    </div>

    <%= f.submit "Criar", class: "btn btn-success float-right" %>
  <% end %>

  <p class="text-muted text-left">
    Já tem uma conta? <%= link_to "Entre", new_user_session_path %>
  </p>
</div>
