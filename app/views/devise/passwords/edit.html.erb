<div class="col-md-6 col-sm">
  <h1>Alterar Senha</h1>
  <hr>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.hidden_field :reset_password_token %>

    <div class="form-group">
      <label class="form-control-label">Nova Senha</label>
      <%= f.password_field :password, class: "form-control", autofocus: true, autocomplete: "off" %>
    </div>

    <div class="form-group">
      <label class="form-control-label">Confirmar Nova Senha</label>
      <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "off" %>
    </div>

    <%= f.submit "Alterar", class: "btn btn-block btn-success" %>
  <% end %>
</div>
