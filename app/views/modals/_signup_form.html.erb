<div class="modal" id="m_signup_form" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog modal-md">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title">Criar Conta</h1>
      </div>

      <%= form_for(User.new, url: user_registration_path) do |f| %>

        <div class="modal-body">
          <div class="form-group">
            <label class="form-control-label">Nome Completo</label>
            <%= f.text_field :full_name, class: "form-control", autofocus: true %>
          </div>

          <div class="form-group">
            <label class="form-control-label">e-mail</label>
            <%= f.email_field :email, class: "form-control", autofocus: true %>
          </div>

          <div class="form-group">
            <label class="form-control-label">Senha</label>
            <%= f.password_field :password, class: "form-control", autocomplete: "off" %>
          </div>
        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
          <%= f.submit "Criar", class: "btn btn-success" %>
        </div>

      <% end %>

    </div>
  </div>
</div>
