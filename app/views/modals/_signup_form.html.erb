<div class="modal" id="m_signup_form" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog modal-md">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title">Criar Conta</h1>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <div class="modal-body">
        <%= form_for(User.new, url: user_registration_path) do |f| %>
          <div class="form-group">
            <label class="form-control-label">Nome Completo</label>
            <%= f.text_field :full_name, class: "form-control", autofocus: true %>
          </div>

          <div class="form-group">
            <label class="form-control-label">e-mail</label>
            <%= f.email_field :email, class: "form-control", autofocus: true %>
          </div>

          <div class="form-group">
            <label class="form-control-label">Senha</label>
            <%= f.password_field :password, class: "form-control", autocomplete: "off" %>
          </div>

          <%= f.submit "Criar", class: "btn btn-success float-right" %>
        <% end %>
      </div>

      <div class="bt-modal-footer p-2">
        <a href="#" data-dismiss="modal" data-toggle="modal" data-target="#m_signup">Voltar</a>
        <span class="text-muted float-right">
          JÃ¡ tem uma conta? <a href="#" data-dismiss="modal" data-toggle="modal" data-target="#m_login">Entre</a>
        </span>
      </div>

    </div>
  </div>
</div>
